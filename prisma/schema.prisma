// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @default(uuid()) @unique
  name          String
  email         String          @unique
  password      String
  created_at    DateTime        @default(now())
  updated_at    DateTime        @default(now())
  infraProblems InfraProblem[]
  problemUps    ProblemUps[]
}

model InfraProblem {
  id            Int             @unique @default(autoincrement())
  problemPic    String
  description   String?
  location      String
  idRelator     String
  created_at    DateTime        @default(now())
  updated_at    DateTime        @default(now())
  Relator       User            @relation(fields: [idRelator], references: [id])
  idType        Int
  Type          ProblemType     @relation(fields: [idType], references: [id])
  problemUps    ProblemUps[]
}

model ProblemType {
  id            Int          @unique @default(autoincrement())
  category      String
  infraProblems InfraProblem[]
}

model ProblemUps {
  idUser        String
  idProblem     Int
  User          User          @relation(fields: [idUser], references: [id])
  Problem       InfraProblem  @relation(fields: [idProblem], references: [id])

  @@id([idUser, idProblem])
}
